<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F6F6F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/Top_part">

        <TextView
        android:id="@+id/big_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sumsung Health"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintBottom_toTopOf="@+id/Bottom_part"

        />

        <TextView
            android:id="@+id/small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="соединено с Gear S3 в 01:53"
            android:textSize="16dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/big_text"
            app:layout_constraintBottom_toTopOf="@+id/thr_dots"
        />

    <ImageView
        android:id="@+id/thr_dots"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_margin="15dp"
        android:src="@drawable/ThrDots"
        app:layout_constraintTop_toBottomOf="@id/small_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/Bottom_part"
        app:layout_constraintHorizontal_bias="1"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Bottom_part"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:layout_margin="10dp"
        android:background="#8DA399"
        app:layout_constraintTop_toBottomOf="@+id/thr_dots"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/steps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Шаги"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/steps_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            />

        <TextView
            android:id="@+id/steps_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/steps_all"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/steps"

            />
        <TextView
            android:id="@+id/steps_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/9 000"
            app:layout_constraintBottom_toTopOf="@id/steps_all"
            app:layout_constraintLeft_toRightOf="@id/steps_value"
            app:layout_constraintTop_toTopOf="@id/steps_value"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/steps_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Все шаги, 02:14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/steps_value"
            android:textSize="10dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>























