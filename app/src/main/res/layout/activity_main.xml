<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_part"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:padding="@dimen/main_padding">

    <TextView
        android:id="@+id/main_title_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/big_logo"
        android:textColor="@color/black"
        android:textSize="@dimen/extra_big_header_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/steps_containner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/second_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_text_marginBottom"
        android:text="@string/connected_to"
        android:textColor="@color/black"
        android:textSize="@dimen/small_header_text_size"
        app:layout_constraintBottom_toTopOf="@+id/three_dots_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title_logo" />

    <ImageView
        android:id="@+id/three_dots_menu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/three_dots_menu_height"
        android:layout_margin="@dimen/three_dots_menu_margin"
        android:background="@drawable/three_dots"
        app:layout_constraintBottom_toTopOf="@+id/steps_containner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/steps_containner"
        android:layout_width="0dp"
        android:layout_height="@dimen/inner_container_height"
        android:layout_marginTop="@dimen/containner_marginTop"
        android:background="@drawable/container_corner"
        android:padding="@dimen/containner_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/three_dots_menu">

        <TextView
            android:id="@+id/steps_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/steps"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_header_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/steps_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/steps_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steps_value"
            android:textColor="@color/black"
            android:textSize="@dimen/big_header_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/steps_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/steps_title" />

        <TextView
            android:id="@+id/steps_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/steps_slash_marginLeft"
            android:text="@string/steps_slash"
            android:textColor="@color/black"
            android:textSize="@dimen/small_header_text_size"
            app:layout_constraintTop_toBottomOf="@+id/steps_title"
            app:layout_constraintBottom_toTopOf="@id/steps_time"
            app:layout_constraintEnd_toStartOf="@id/steps_goal"
            app:layout_constraintStart_toEndOf="@id/steps_value" />

        <TextView
            android:id="@+id/steps_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steps_goal"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/steps_time"
            app:layout_constraintLeft_toRightOf="@id/steps_slash"
            app:layout_constraintTop_toTopOf="@id/steps_value" />

        <TextView
            android:id="@+id/steps_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/steps_all"
            android:textSize="@dimen/extra_small_header_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/steps_value" />

        <TextView
            android:id="@+id/progress_Bar_Percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/percentage"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_small_header_text_size"
            app:layout_constraintBottom_toTopOf="@id/progress_Bar"
            app:layout_constraintStart_toStartOf="@id/progress_Bar"
            app:layout_constraintVertical_bias="0.25" />

        <ProgressBar
            android:id="@+id/progress_Bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/progress_bar_height"
            android:layout_marginLeft="@dimen/progress_bar_marginLeft"
            android:background="@drawable/progress_bar_line"
            android:progress="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/steps_goal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/exercise_container"
        android:layout_width="0dp"
        android:layout_height="@dimen/inner_container_height"
        android:layout_marginTop="@dimen/containner_marginTop"
        android:background="@drawable/container_corner"
        android:padding="@dimen/containner_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/steps_containner">

        <TextView
            android:id="@+id/exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:textColor="@color/black"
            android:textSize="@dimen/small_header_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exercise_logs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="@string/view_log"
            android:textSize="@dimen/small_header_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.85"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/run_img"
            android:layout_width="0dp"
            android:layout_height="@dimen/exercise_button_height"
            android:background="@drawable/run"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/man_img"
            app:layout_constraintStart_toEndOf="@id/guid_right"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/man_img"
            android:layout_width="0dp"
            android:layout_height="@dimen/exercise_button_height"
            android:background="@drawable/man"
            app:layout_constraintBottom_toBottomOf="@id/run_img"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/run_img"
            app:layout_constraintStart_toEndOf="@id/velo_img"
            app:layout_constraintTop_toTopOf="@id/run_img"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/velo_img"
            android:layout_width="0dp"
            android:layout_height="@dimen/exercise_button_height"
            android:background="@drawable/velo"
            app:layout_constraintBottom_toBottomOf="@id/run_img"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/hamburger_img"
            app:layout_constraintStart_toEndOf="@id/man_img"
            app:layout_constraintTop_toTopOf="@id/man_img"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/hamburger_img"
            android:layout_width="0dp"
            android:layout_height="@dimen/exercise_button_height"
            android:background="@drawable/hamburger"
            app:layout_constraintBottom_toBottomOf="@id/run_img"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/guid_left"
            app:layout_constraintStart_toEndOf="@id/velo_img"
            app:layout_constraintTop_toTopOf="@id/velo_img"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/slip_container"
        android:layout_width="0dp"
        android:layout_height="@dimen/inner_container_height_last"
        android:layout_marginTop="@dimen/containner_marginTop"
        android:background="@drawable/container_corner"
        android:padding="@dimen/containner_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise_container">

        <TextView
            android:id="@+id/sleep_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/do_slep"
            android:textColor="@color/black"
            android:textSize="@dimen/small_header_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sleep_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textColor="@color/black"
            android:textSize="@dimen/small_header_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sleep_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_marginTop"
            android:text="@string/slep_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sleep_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
